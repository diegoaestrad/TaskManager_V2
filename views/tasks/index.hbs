<h1>Task Manager</h1>

<a href="/tasks/add"> Add a New task</a>
<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Priority</th>
        <th>Complete</th>
        <th>Actions</th>
    </tr>

    {{#each tasks}}
        <tr>
            <td> {{this.name}} </td>
            <td> {{this.priority}} </td>
            <td> {{this.complete}} </td>
            <td>
                <!--this._id is the MongoDB primary key for each specific task -->
                <a href="/tasks/edit/{{ this._id }}"> Edit </a>|
                <a href="/tasks/delete/{{ this._id }}" class="text-danger delete"> Delete </a>
            </td>
        </tr>

    {{/each}}

</table>
